<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
            <h3 class="fw-bold py-3 mb-2"><span class="text-muted fw-light">Session /</span> Edit Session</h3>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-12">

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Session.Id" />

    <div class="form-group">
        <label asp-for="Session.Name" class="control-label">Session Name</label>
        <input asp-for="Session.Name" class="form-control" />
        <span asp-validation-for="Session.Name" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="Session.Description" class="control-label">Description</label>
        <textarea asp-for="Session.Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Session.Description" class="text-danger"></span>
    </div>
    <br />
    <div class="form-group">
        <label asp-for="ProgramName" class="control-label"></label>
        <input asp-for="ProgramName" class="form-control" readonly />
        <span asp-validation-for="ProgramName" class="text-danger"></span>
    </div>
    <input type="hidden" asp-for="Session.ProgramId" />
    <input type="hidden" asp-for="Session.Id" />
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" asp-route-programId="@Model.Session.ProgramId" class="btn btn-secondary">Cancel</a>
</form>

