<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2>Edit Therapy Program</h2>
    </div>
    <hr />

    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="Objective" class="control-label"></label>
                    <input asp-for="Objective" class="form-control" />
                    <span asp-validation-for="Objective" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="WeekdayPrice" class="control-label"></label>
                    <input asp-for="WeekdayPrice" class="form-control" />
                    <span asp-validation-for="WeekdayPrice" class="text-danger"></span>
                </div>
                <div class="form-floating py-2 col-12">
                    <label asp-for="WeekendPrice" class="control-label"></label>
                    <input asp-for="WeekendPrice" class="form-control" />
                    <span asp-validation-for="WeekendPrice" class="text-danger"></span>
                </div>
                <div class="row pt-2">
                    <div class="col-6 col-md-6">
                        <button type="submit" class="btn btn-primary form-control">Edit</button>
                    </div>
                    <div class="col-6 col-md-6">
                        <a asp-controller="CustServiceTherapyProgram" asp-action="Index" class="btn btn-secondary form-control">Back to list</a>
                    </div>
                </div>
            </form>
        </div>
    </div>


    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
