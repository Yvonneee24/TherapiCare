            }
        /* Circular Hover Button */
        .circular-btn {
            display: inline-block;
            width: 50px; /* Adjust width and height for desired size */
            height: 50px; /* Adjust width and height for desired size */
            position: fixed; /* Fixed position */
            bottom: 20px; /* Place it at the bottom of the page */
            right: 20px; /* Place it 20px from the right */
            z-index: 99; /* Ensure it is above other elements */
            line-height: 50px; /* Center text vertically */
            text-align: center; /* Center text horizontally */
            border-radius: 50%; /* Make it circular */
            background-color: #a891d4; /* Default background color */
            color: #fff; /* Text color */
            font-size: 1.5em; /* Font size */
            border: none; /* Remove border */
            cursor: pointer; /* Pointer cursor */
            transition: background-color 0.3s ease; /* Smooth transition */
        }

            .circular-btn:hover {
                background-color: #a891d4; /* Darker background color on hover */
                transform: translateY(-5px); /* Move button up by 5px */
            }

        .text-secondary {
            color: #a891d4 !important; /* Lighter purple color */
        }

        .bg-secondary {
            background-color: #a891d4 !important; /* Lighter purple background */
        }

