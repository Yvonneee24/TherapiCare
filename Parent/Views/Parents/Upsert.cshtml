<div class="card-body p-4">
    <div class="row pb-3">
        <div class="col-6">
            <h3 class="fw-bold py-3 mb-2">Update Profile </h3>
        </div>
        <hr />

        <div class="row">
            <div class="col-md-6">
<form asp-action="Upsert" method="post">
    <div class="form-group">
        <label asp-for="ParentId" class="control-label"></label>
        <input asp-for="ParentId" class="form-control"/>
        <span asp-validation-for="ParentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="City" class="control-label"></label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Postcode" class="control-label"></label>
        <input asp-for="Postcode" class="form-control" />
        <span asp-validation-for="Postcode" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="State" class="control-label"></label>
        <input asp-for="State" class="form-control" />
        <span asp-validation-for="State" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Occupation" class="control-label"></label>
        <input asp-for="Occupation" class="form-control" />
        <span asp-validation-for="Occupation" class="text-danger"></span>
    </div>
    <div class="form-group">
    <label asp-for="HouseholdIncome" class="control-label"></label>
    <select asp-for="HouseholdIncome" class="form-control">
        <option value="<RM5000">&lt;RM5000</option>
        <option value="<RM10000">&lt;RM10000</option>
        <option value=">RM10000 & Above">&gt;RM10000 & Above</option>
    </select>
    <span asp-validation-for="HouseholdIncome" class="text-danger"></span>
</div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>
    <input type="hidden" asp-for="ParentId" />
    <input type="hidden" asp-for="AppUserId" />
    <br />
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" asp-controller="Parents" class="btn btn-secondary">Back</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
