@using Microsoft.AspNetCore.Identity
@using Therapi.Utility

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        @if (User.IsInRole(SD.Role_Parent))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Parent" asp-controller="Parents" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
        }
        else if (User.IsInRole(SD.Role_Admin))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Admin" asp-controller="Admins" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
        }
        else if (User.IsInRole(SD.Role_Therapist))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="Therapist" asp-controller="Therapists" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
        }
        else if (User.IsInRole(SD.Role_CustomerService))
        {
            <li class="nav-item">
                <a id="manage" class="nav-link text-dark" asp-area="CustomerService" asp-controller="CustomerServiceProfile" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </li>
        }
        <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>
